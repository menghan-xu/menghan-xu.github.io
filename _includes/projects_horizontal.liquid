<div class="col mb-4">
  
  <hr style="border-top: 1px solid #e0e0e0; margin-top: 0; margin-bottom: 2rem;">

  <div class="row">
    
    <div class="col-md-4 abbr" style="padding-right: 20px;">
      {% if project.img %}
        <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" {% if project.redirect %}target="_blank"{% endif %} style="width: 100%; display: block;">
          {% if project.img contains '://' %}
            <img class="img-fluid z-depth-1 rounded" src="{{ project.img }}" alt="{{ project.title }}" style="width: 100%; height: auto; object-fit: cover;">
          {% else %}
            <img class="img-fluid z-depth-1 rounded" src="{{ project.img | relative_url }}" alt="{{ project.title }}" style="width: 100%; height: auto; object-fit: cover;">
          {% endif %}
        </a>
      {% endif %}
    </div>

    <div class="col-md-8" style="display: flex; flex-direction: column; justify-content: center;">
      
      <div class="font-weight-bold" style="font-size: 1.3rem; margin-bottom: 0.5rem;">
        <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" {% if project.redirect %}target="_blank"{% endif %} class="post-title">
          {{ project.title }}
        </a>
      </div>

      <div class="content" style="margin-bottom: 1rem; color: #333; font-size: 1rem;">
        {{ project.description }}
      </div>

      <div class="project-meta">
        {% if project.tags %}
          {% for tag in project.tags %}
            <span class="project-tag">
              <i class="fa-solid fa-hashtag fa-sm"></i> {{ tag }}
            </span>
          {% endfor %}
        {% endif %}
        
        {% if project.category %}
          {% for cat in project.category %}
            <span class="project-category">
              <i class="fa-solid fa-tag fa-sm"></i> {{ cat }}
            </span>
          {% endfor %}
        {% endif %}
      </div>

    </div>
  </div>
</div>